[{
	"type": 3,
	"title": "Pihole",
	"description": "Network wide ad-blocker",
	"logo": "https://pi-hole.github.io/graphics/Vortex/Vortex_with_text.png",
	"categories": [ "pi-hole.net", "dns", "ad-blocker", "server" ],

	"repository": {
		"url": "https://github.com/strootje/bottles",
		"stackfile": "src/portainer/pihole/pihole/docker-compose.yml"
	},

	"env": [
		{
			"name": "PUID",
			"label": "Portainer User ID",
			"default": "1001"
		},
		{
			"name": "PGID",
			"label": "Portainer Group ID",
			"default": "1001"
		},
		{
			"name": "TZ",
			"label": "Timezone",
			"default": "Europe/Amsterdam"
		},
		{
			"name": "VIRTUAL_HOST",
			"label": "Virtual host name",
			"default": "pi.hole"
		},
		{
			"name": "VIRTUAL_PORT",
			"label": "Virtual host port",
			"default": "80"
		},
		{
			"name": "DNS1",
			"label": "Dns 1",
			"default": "127.0.0.1"
		},
		{
			"name": "DNS2",
			"label": "Dns 2",
			"default": "192.168.1.1"
		},
		{
			"name": "WEBPASSWORD",
			"label": "Web Password"
		},
		{
			"name": "PIHOLE_VOLUMES_DIR",
			"label": "Pihole Volumes Folder"
		}
	]
}]
